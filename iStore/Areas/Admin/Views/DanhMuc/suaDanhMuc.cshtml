
@{
    ViewBag.Title = "Chỉnh sửa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-5">Chỉnh sửa danh mục</h2>

<form action="@Url.Action("suaDanhMuc", "DanhMuc", new {area = "Admin"})" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id_danhmuc" value="@Model.id_danhmuc" />
    <div class="row mt-5">
        <div class="col-md-6">
            <label for="ten_danhmuc">Tên danh mục</label>
            <input type="text"
                   class="form-control"
                   id="ten_danhmuc"
                   name="ten_danhmuc"
                   value="@Model.ten_danhmuc" />
        </div>
    </div>


    <button type="submit" class="btn btn-success my-2">Lưu</button>
    <a href="@Url.Action("Index", "DanhMuc", new {area = "Admin"})" class="btn btn-dark">Hủy</a>
</form>

